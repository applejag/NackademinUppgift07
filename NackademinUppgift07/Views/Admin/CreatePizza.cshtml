@using System.Globalization
@using NuGet.Frameworks
@model ViewMatrattModel
@inject MatrattRepository matrattRepository

@section Scripts
{@Html.Partial("_ValidationScriptsPartial")}

<form method="post">
	<input type="hidden" asp-for="MatrattId"/>
	<fieldset>
		<legend>@ViewData["Legend"]</legend>

		<p>
			<span asp-validation-for="MatrattNamn"></span>
			<label asp-for="MatrattNamn"></label>
			<input asp-for="MatrattNamn"/>
		</p>

		<p>
			<span asp-validation-for="MatrattTyp"></span>
			<label asp-for="MatrattTyp"></label>
			<select asp-for="MatrattTyp" asp-items="@Model.MatrattTypes">
				<option disabled="disabled">Välj en kategori</option>
			</select>
		</p>

		<p>
			<span asp-validation-for="Beskrivning"></span>
			<label asp-for="Beskrivning"></label>
			<input asp-for="Beskrivning"/>
		</p>

		<p>
			<span asp-validation-for="Pris"></span>
			<label asp-for="Pris"></label>
			<input asp-for="Pris"/>
		</p>

		<p>
			<span asp-validation-for="Produkts"></span>
			<label asp-for="Produkts" class="big"></label>
			<ul>
				@for (var i = 0; i < Model.Produkts.Count; i++)
				{
					<li class="oneline">
						<input asp-for="@Model.Produkts[i].Value" type="hidden"/>
						<input asp-for="@Model.Produkts[i].Selected"/>
						<label asp-for="@Model.Produkts[i].Selected">@Model.Produkts[i].Text</label>
					</li>
				}
			</ul>
		</p>

		<p>
			<input type="submit" value="Spara"/>
		</p>
	</fieldset>
</form>

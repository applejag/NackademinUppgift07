@model List<Matratt>

@{
    ViewData["Title"] = "Tomasos";
	Layout = "~/Views/_LayoutMain.cshtml";
}

@foreach (Matratt mat in Model)
	{
		<section class="mat">
			<div class="mat-head">
				<h2 class="mat-name">@mat.MatrattNamn <span class="mat-type">@mat.MatrattTypNavigation.Beskrivning</span></h2>
				<div class="mat-head-right">
					<div class="mat-price">@mat.Pris.ToString("C")</div>
					<div class="mat-add">
						<a asp-action="AddToCart" asp-route-id="@mat.MatrattId">Lägg till i kundvagn</a>
					</div>
				</div>
			</div>
			<div class="mat-body">
				<div class="mat-ingredients">
					<strong>Ingredienser</strong>
					<ul>
						@foreach (MatrattProdukt nav in mat.MatrattProdukt)
						{
							<li>@nav.Produkt.ProduktNamn</li>
						}
					</ul>
				</div>
				<div class="mat-desc">@mat.Beskrivning</div>
			</div>
		</section>
	}

@model UserRegisterModel

@{
    ViewData["Title"] = "Ny användare";
}

@section Scripts
{@Html.Partial("_ValidationScriptsPartial")}

<form asp-action="Register" method="post">
	<fieldset>
		<legend>Registrera ny användare</legend>

		<p>
			<span asp-validation-for="UserName"></span>
			<label asp-for="UserName"></label>
			<input asp-for="UserName" />
		</p>
		<p>
			<span asp-validation-for="DisplayName"></span>
			<label asp-for="DisplayName"></label>
			<input asp-for="DisplayName" />
		</p>
		<p>
			<span asp-validation-for="Email"></span>
			<label asp-for="Email"></label>
			<input asp-for="Email" />
		</p>
		<hr/>
		<p>
			<span asp-validation-for="PhoneNumber"></span>
			<label asp-for="PhoneNumber"></label>
			<input asp-for="PhoneNumber" />
		</p>
		<p>
			<span asp-validation-for="Address"></span>
			<label asp-for="Address"></label>
			<input asp-for="Address" />
		</p>

		<p>
			<span asp-validation-for="PostalCode"></span>
			<label asp-for="PostalCode"></label>
			<input asp-for="PostalCode" />
		</p>
		<p>
			<span asp-validation-for="City"></span>
			<label asp-for="City"></label>
			<input asp-for="City" />
		</p>
		<hr/>
		<p>
			<span asp-validation-for="Password"></span>
			<label asp-for="Password"></label>
			<input asp-for="Password" />
		</p>
		<p>
			<span asp-validation-for="PasswordConfirm"></span>
			<label asp-for="PasswordConfirm"></label>
			<input asp-for="PasswordConfirm" />
		</p>
		<hr/>
		<p>
			<input type="submit" value="Registrera"/>
		</p>
	</fieldset>
</form>